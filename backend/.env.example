# Tidal API Credentials
TIDAL_CLIENT_ID=your_client_id_here
TIDAL_CLIENT_SECRET=your_client_secret_here

# Tidal API Configuration
TIDAL_TOKEN_URL=https://auth.tidal.com/v1/oauth2/token
TIDAL_API_BASE_URL=https://openapi.tidal.com

# Rate Limiting Configuration
# Prevents hitting Tidal API rate limits by queuing requests
# With batch optimization (only 3 API calls per search), can safely use 3 req/s
TIDAL_REQUESTS_PER_SECOND=3
TIDAL_MAX_CONCURRENT=3
TIDAL_MAX_RETRIES=3
TIDAL_RETRY_DELAY_MS=1000

# Cache Configuration
SEARCH_CACHE_TTL=3600

# Server Configuration
PORT=4000
NODE_ENV=development

# PostgreSQL Configuration
POSTGRES_DB=algojuke
POSTGRES_USER=algojuke_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_PORT=5433
POSTGRES_HOST=localhost

# Database Connection
DATABASE_URL=postgresql://algojuke_user:change_me_in_production@localhost:5433/algojuke

# TypeORM Settings (development only)
DB_LOGGING=true
DB_SYNCHRONIZE=false
DB_SLOW_QUERY_THRESHOLD=1000
